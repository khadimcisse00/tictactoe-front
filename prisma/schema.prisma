generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id             Int        @id @default(autoincrement())
  nom            String
  prenom         String
  email          String     @unique
  pseudo         String     @unique
  motDePasse     String
  avatar         String
  estVerifie     Boolean    @default(false)
  partiesJoueurX Partie[]   @relation("JoueurX")
  partiesJoueurO Partie[]   @relation("JoueurO")
  partiesGagnees Partie[]   @relation("Gagnant")
  tokens         Token[]
  creeLe         DateTime   @default(now())
  majLe          DateTime   @updatedAt
}

model Partie {
  id            Int          @id @default(autoincrement())
  code          String       @unique
  joueurXId     Int?
  joueurOId     Int?
  joueurX       Utilisateur? @relation("JoueurX", fields: [joueurXId], references: [id])
  joueurO       Utilisateur? @relation("JoueurO", fields: [joueurOId], references: [id])
  grille        String       @default("_________")
  joueurCourant String       @default("X")
  gagnantId     Int?
  gagnant       Utilisateur? @relation("Gagnant", fields: [gagnantId], references: [id])
  estNulle      Boolean      @default(false)
  typePartie    String       // "MULTI" ou "ordi"
  niveauIA      String?
  creeLe        DateTime     @default(now())
  majLe         DateTime     @updatedAt
}

model Token {
  id            Int          @id @default(autoincrement())
  type          String       
  valeur        String       @unique
  utilisateur   Utilisateur  @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int
  expireLe      DateTime
  utilise       Boolean      @default(false)
  creeLe        DateTime     @default(now())
}
